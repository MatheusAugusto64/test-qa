{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "src/*": ["api/src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./api/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["api/src/**/*", "test/**/*"]
}
